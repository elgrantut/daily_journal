<%- include('partials/header') %>
<div class="container py-3">
  <div class="col">
    <h1>Home</h1>
    <p><%= homeStartingContent %></p>
  </div>
  <div class="col my-3">
    <% posts.forEach((post)=>{%>
    <div class="my-4">
      <h5 class="text-primary"><%=post.title%></h5>
      <p class="text-muted fw-light">
        <%= post.content.substring(0, 100)+'...' %>
      </p>
      <a
        class="link-primary fw-light text-decoration-none"
        name="link"
        href="/posts/<%= post._id %>"
        >Read More</a
      >
      <% }) %>
    </div>
  </div>
</div>

<%- include('partials/footer') %>
