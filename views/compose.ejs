<%- include('partials/header.ejs') %>

<div class="container my-3">
  <h1>Compose</h1>
  <form action="/compose" method="POST">
    <div class="mb-3">
      <label class="form-label" for="postTitle">Title</label>
      <input class="form-control" type="text" name="postTitle" />
    </div>
    <div class="mb-3">
      <label class="form-label" for="postBody">Post</label>
      <textarea
        class="form-control"
        type="text"
        name="postBody"
        rows="5"
        cols="30"
      ></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Publish</button>
  </form>
</div>

<%- include('partials/footer.ejs') %>
